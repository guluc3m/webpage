<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
    <name>Twitter</name>
    <author>Ben Hiller</author>
	<creationDate>December 2007</creationDate>
	<authorEmail>benhiller@gmail.com</authorEmail>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0.0</version>
    <description>Show a user's latest Twitter updates.</description>
    <files>
        <filename module="mod_twitter">mod_twitter.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <params>
		<param name="username" type="text" default="" label="PARAMUSERNAMELBL" description="PARAMUSERNAMEDESC" />
		<param name="posts" type="text" default="" label="PARAMPOSTSLBL" description="PARAMNUMPOSTSDESC" />
    </params>
	<languages>
	   <language tag="en-GB">en-GB.mod_twitter.ini</language>
	</languages>
</install>